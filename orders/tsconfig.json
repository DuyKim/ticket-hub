{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "paths": {
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/utils/*"],
      "@routers/*": ["./src/routers/*"],
      "@services/*": ["./src/services/*"],
      "@root/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
