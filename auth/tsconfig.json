{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "paths": {
      "@errors/*": ["./src/errors/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@root/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
